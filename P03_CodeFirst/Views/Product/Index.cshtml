@model IEnumerable<Product>
@* IEnumerable > List *@
<div>
    <a class="btn btn-success" asp-action="Create">Create</a>
    @if (TempData["OK"] != null)
    {
        <div class="alert alert-primary" role="alert">
            ไม่พบข้อมูล
        </div>
    }
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(m => m.Id)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Name)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Price)</th>
                <th scope="col">@Html.DisplayNameFor(m => m.Amount)</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <th scope="row">@product.Id</th>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Amount</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                        <a class="btn btn-danger" onclick="return confirm('Are you sure?')"
                        asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>